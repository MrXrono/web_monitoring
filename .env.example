# RAID Monitor Configuration
# Copy to .env and adjust values

# PostgreSQL
POSTGRES_DB=raidmonitor
POSTGRES_USER=raidmonitor
POSTGRES_PASSWORD=CHANGE_ME_RANDOM_64

# Application
SECRET_KEY=CHANGE_ME_RANDOM_64
ENCRYPTION_KEY=CHANGE_ME_RANDOM_32

# Initial admin (auto-generated on first start)
ADMIN_PASSWORD=CHANGE_ME

# Local admin re-enable (set to "true" to enable for 3 hours)
ADMIN_FORCE_ENABLE=false

# Telegram (configured via web UI, encrypted)
TELEGRAM_BOT_TOKEN_ENCRYPTED=
TELEGRAM_CHAT_ID=

# Debug
DEBUG=false
LOG_LEVEL=INFO

# Server
APP_HOST=0.0.0.0
APP_PORT=8000
